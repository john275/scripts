  echo -en namecheap' \t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::namecheap:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en rubrick REA' \t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::rubrickrea:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
#  echo -en john275' \t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::john275:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en rubrick SLO' \t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::rubrickslo:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en rubrick Cloud' \t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::rubrickcld:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en Wiz' \t\t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::wiz:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en Veeam SLO' \t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::veeamslo:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en Veeam REA' \t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::veeamrea:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en Guardicore' \t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::guardicore:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en nrgok' \t\t\t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::nrgok:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en Truenas MOL HSK' \t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::tnasmolhsk:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
  echo -en Truenas MOL RDG' \t ' -\ ; oathtool -b --totp $(echo $(eyaml decrypt -s $(grep 'totp::tnasmolrdg:' ${HOME}/facts.eyaml | awk '{print $2}') 2>/dev/null))
}

if [[ "$1" == "-w" ]]
then

  if [[ $(date +%S) > 30 ]]
  then

    until [[ "$(date +%S)" == "00" ]]
    do
      echo -ne "\r  \r"$((60 - $(date +%S)));
    done

  else

    until [[ "$(date +%S)" == "30" ]]
    do
      echo -ne "\r  \r"$((30 - $(date +%-S)));
    done

  fi

  clear

  2fa_codes

else
  2fa_codes
fi
